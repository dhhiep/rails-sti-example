= content_for :right_nav_bar do
  %li
    = link_to "New #{page_title}", [:new, :admin, @resource.model_name.param_key]

%table.table.table-style-1
  %thead
    %tr
      %th Name
      %th File Name
      %th Thumbs
      %th{:style => 'width: 75px;'} Status
      %th Actions
  %tbody
    - @banners.each do |banner|
      %tr
        %td= banner.name
        %td= banner.attachment_file_name
        %td= image_tag banner.attachment.url, :width => '70px'
        %td.text-center.margin-0.padding-0
          = content_tag :div, :class => "state #{banner.active ? 'text-success' : 'text-danger'}" do
            = "#{banner.active ? 'Active' : 'Inactive'}"
        %td.actions.actions-2
          = link_to 'edit', [:edit, :admin, banner], :class => 'edit-button btn btn-sm btn-primary'
          = link_to 'delete', [:admin, banner], :class => 'delete-button btn btn-sm btn-danger', method: :delete, :data => { :confirm => "Are you sure?"}
